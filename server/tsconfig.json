{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": false,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./src/@types",
      "node_modules/@types"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}